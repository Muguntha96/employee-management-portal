<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/employees/edit.css">
  <%- include('../partials/nav') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <form action="/employees/<%= employee._id %>?_method=PUT" method="POST">
        <label for="fname-input">First Name :</label>
        <input id="fname-input" type="text" name="firstName" value="<%= employee.firstName %>">
        <label for="lname-input">Last Name :</label>
        <input id="lname-input" type="text" name="lastName" value="<%= employee.lastName %>">
        <label for="dob-input">DOB :</label>
        <input id="dob-input" type="date" name="dob" max=<%=maxdate %> min = <%= mindate %> value="<%=
            employee.dob.toISOString().slice(0,10) %>">
            <label for="address-input">Address :</label>
            <textarea id="address-input" name="address" row="7" cols="50"><%= employee.address %></textarea>
            <label for="salary-input">Salary :</label>
            <input id="salary-input" type="number" name="salary" min="10000" max="100000"
              value="<%= employee.salary %>">
            <label for="phone-input">Phone Number :</label>
            <input id="phone-input" type="tel" name="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
              placeholder="123-456-7890" size="12" autocomplete="off"
              value="<%= employee.phoneNumber.toString().substring(0,3) %>-<%= employee.phoneNumber.toString().substring(3,6) %>-<%= employee.phoneNumber.toString().substring(6) %>"
              required>
            <label for="dpt-input">Department :</label>
            <select name="department" id="dpt-input">
              <option value="<%= employee.department %>">
                <%= employee.department %>
              </option>
              <option value="Admin">Admin</option>
              <option value="Finance">Finance</option>
              <option value="Support">Support</option>
              <option value="HR">HR</option>
              <option value="IT">IT</option>
            </select>
            <button type="submit" id="save-employee">Update Employee</button>
      </form>
    </main>
    <%- include('../partials/footer') %>